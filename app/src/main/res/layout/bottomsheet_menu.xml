<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnCount="2">

        <TextView
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/gbold"
            android:textColor="@color/colorBlack"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/btn_closeDetail"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close_black_24dp" />

    </GridLayout>

    <ImageView
        android:id="@+id/img_thumbDetail"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="25dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_tittleDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/gmedium"
        android:text="@string/name"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_priceDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gbold"
        android:text="@string/name"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <Button
            android:id="@+id/btn_removeQtyDetail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="14dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_remove_black_24dp"
            android:backgroundTint="@color/colorRed"/>

        <TextView
            android:id="@+id/tv_QtyDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gbold"
            android:text="@string/_0"
            android:layout_margin="14dp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_addQtyDetail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_add_black_24dp"
            android:layout_margin="14dp"
            android:backgroundTint="@color/colorGreen"/>

    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_buyDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_purple_cart"
        android:fontFamily="@font/gbold"
        android:padding="15dp"
        android:text="@string/buy"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />

</LinearLayout>